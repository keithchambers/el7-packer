{
  "builders": [
    {
      "type": "virtualbox-iso",
      "vm_name": "centos-7-x86_64",
      "guest_os_type": "RedHat_64",
      "iso_checksum_type": "md5",
      "iso_checksum": "96de4f38a2f07da51831153549c8bd0c",
      "iso_url": "https://mirrors.kernel.org/centos/7/isos/x86_64/CentOS-7.0-1406-x86_64-NetInstall.iso",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "ssh_password": "vagrant",
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "10000s",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "1024"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "2"
        ]
      ],
      "http_directory": ".",
      "boot_command": [
        "<up><tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter>"
      ],
      "boot_wait": "10s",
      "disk_size": 40960,
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/halt -h -p"
    },
    {
      "type": "vmware-iso",
      "vm_name": "centos-7-x86_64",
      "guest_os_type": "redhat-64",
      "iso_checksum_type": "md5",
      "iso_checksum": "96de4f38a2f07da51831153549c8bd0c",
      "iso_url": "https://mirrors.kernel.org/centos/7/isos/x86_64/CentOS-7.0-1406-x86_64-NetInstall.iso",
      "ssh_password": "vagrant",
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "10000s",
      "tools_upload_flavor": "linux",
      "vmx_data": {
        "cpuid.coresPerSocket": "1",
        "memsize": "480",
        "numvcpus": "1"
      },
      "http_directory": ".",
      "boot_command": [
        "<up><tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter>"
      ],
      "boot_wait": "10s",
      "disk_size": 40960,
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "vagrant.sh",
        "vmtools.sh",
        "cleanup.sh"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "compression_level": 9,
      "output": "centos-7-x86_64.box"
    }
  ]
}
